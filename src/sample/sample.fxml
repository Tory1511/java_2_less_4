<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Button text="Send message" GridPane.rowIndex="9" GridPane.columnIndex="0" onAction="#sendMessage" />
    <TextField fx:id="textField" GridPane.rowIndex="7" GridPane.columnIndex="0" promptText="Enter your message"  onAction="#sendMessage"/>
    <TextArea fx:id="textArea" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="400" prefHeight="400"/>
</GridPane>